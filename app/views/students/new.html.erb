<div class="container">
  <h1>Add new Student</h1>
  <%= simple_form_for [@klass, @standard, @student] do |f|%>
    <%= f.input :name, required: true %>
    <%= f.input :address, required: true %>
    <%= f.input :standard_id, collection: Standard.all, value_method: :id %>
    <%= f.input :dob, as: :date, html5: true, required: true %>
    <%= f.input :fathers_name, label: "Father's Name", required: true %>
    <%= f.submit "Add New Student", class: "btn btn-primary" %>
    <%= link_to "Cancel", klass_standard_students_path, class: "btn btn-primary"%>
  <% end %>
</div>
