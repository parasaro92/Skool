<div class="container">
  <h1>Class</h1>
  <table class="table table-striped table-hover ">
    <thead>
      <tr>
        <th>Class Name</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      <% @klasses.each do |klass| %>
      <tr>
        <td><%= link_to klass.name, klass_standards_path(klass_id: klass.id) %></td>
        <td><%= link_to "Edit", edit_klass_path(klass), class: "btn btn-default" %></td>
        <td><%= link_to "Delete", klass_path(klass), class: "btn btn-default", method: :delete, data: {confirm: "Are you sure?"} %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to "Add New House", new_klass_path, class: "btn btn-primary" %>
</div>
